{% extends "base.html.twig" %}

{% block body %}
    <table class="table table-stripped table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">name</th>
                <th>author</th>
                <th>genre</th>
                <th>sum</th>
            </tr>
        </thead>
        {% for b in items %}
        <tr>
            <td>{{b.name}}</td>
            <td>{{b.author}}</td>
            <td>{{b.genre}}</td>
            <td>{{b.sum}}</td>
        </tr>
        {% endfor %}
    </table>
    <a href="{{ path('item_new')}}"> new</a>
   
{% endblock %}